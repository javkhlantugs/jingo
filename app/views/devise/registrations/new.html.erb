<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-horizontal">
  <div class="field form-group">
    <%= f.label :first_name, class: 'control-label col-sm-2' %><br />
    <%= f.text_field :first_name, autofocus: true, class: 'col-sm-10' %>
  </div>

  <div class="field form-group">
    <%= f.label :last_name, class: 'control-label col-sm-2' %><br/>
    <%= f.text_field :last_name, class: 'col-sm-10' %>
  </div>

  <div class="field form-group">
    <%= f.label :email, class: 'control-label col-sm-2'%><br />
    <%= f.email_field :email, class: 'col-sm-10' %>
  </div>

  <div class="field form-group">
    <%= f.label :phone_number, class: 'control-label col-sm-2' %><br />
    <%= f.telephone_field :phone, class: 'col-sm-10' %>
  </div>

  <div class="field form-group">
    <%= f.label :age, class: 'control-label col-sm-2' %><br />
    <%= f.number_field :age, class: 'col-sm-10' %>
  </div>

  <div class="field form-group">
    <%= f.label :hometown, class: 'control-label col-sm-2' %><br />
    <div class="col-sm-10">
    <%= country_select("user", "hometown") %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: 'control-label col-sm-2' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'col-sm-10' %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, class: 'control-label col-sm-2' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'col-sm-10' %>
  </div>
  
  <div class="field form-group">
  <%= f.label :profile_photo, class: "control-label col-sm-2" %>
  <%= f.file_field :avatar, as: :file, class: 'col-sm-10' %>
  </div>

<div class="form-group">
  <div class="actions col-sm-offset-2 col-sm-10">
    <%= f.submit "Sign up", class: 'btn btn-default' %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
