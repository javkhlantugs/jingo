<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-horizontal">
  <div class="field form-group">
    <%= f.label :first_name, class: 'control-label col-sm-2' %><br />
     <div class="col-sm-10">
    <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :last_name, class: 'control-label col-sm-2' %><br/>
     <div class="col-sm-10">
    <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :email, class: 'control-label col-sm-2'%><br />
     <div class="col-sm-10">
    <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :hometown, class: 'control-label col-sm-2' %><br />
    <div class="col-sm-10">
    <%= country_select("user", "hometown", { priority_countries: ["MN"] }, html_options = {:class => "form-control"})%>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :current_country, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
    <%= country_select("user", "current_country", {priority_countries: ["US"]}, html_options = {:class => "form-control"}) %>
    </div>
    </div>

    <div class="field form-group">
      <%= f.label :current_city, class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
      <%= f.text_field :current_city, class: 'form-control' %>
      </div>
      </div>
    <div class='field form-group'>
    <%= f.label :zip, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
    <%= f.number_field :zipcode, class: 'form-control' %>
    </div>
    </div>

  <div class="field form-group">
    <%= f.label :password, class: 'control-label col-sm-2' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
     <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, class: 'control-label col-sm-2' %><br />
     <div class="col-sm-10">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>
  
  <div class="field form-group">
  <%= f.label :profile_photo, class: "control-label col-sm-2" %>
   <div class="col-sm-10">
  <%= f.file_field :avatar, as: :file, class: 'form-control' %>
  </div>
  </div>

<div class="form-group">
  <div class="actions col-sm-offset-2 col-sm-10">
    <%= f.submit "Sign up", class: 'btn btn-default' %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
