<div class="my-container">
<div class='block-info block'>
	<p class='block-header'>
	INFO
	</p>

	
	<%= image_tag @a_user.avatar.url(:medium), class: "img-thumbnail info-block-img" %><br>

	<div class="info-block-details">
		<p>Name: <%= @a_user.first_name %></p>

		<p>From: <%= @a_user.hometown %></p>
		<p>Presently: <%= @a_user.current_city %> </p>
	</div>

	</div>

<div class='block-activities block'>
	<h4 class='block-header'>
	ACTIVITIES
	</h4>
	<% @created_events.each do |event| %>
	<div id="<%= event.id %>" class="panel panel-default">
	<p>Created an event <%= event.title %></p>
	</div>
	<% end %>
</div>
</div>