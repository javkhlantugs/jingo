<h3>Create New Event</h3>

<%= form_for [@a_user, @newevent], html: { multipart: true } do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %><br>
	<%= f.label :time_and_date %>
	<%= f.datetime_field :date, min: @today %><br>
	<%= f.label :description %>
	<%= f.text_area :description %><br>
	<%= f.label :street %>
	<%= f.text_field :street %><br>
	<%= f.label :city %>
	<%= f.text_field :city %><br>
	<%= f.label :state %>
	<%= f.text_field :state, :maxlength => 2 %><br>
	<%= f.label :Zip %>
	<%= f.text_field :zipcode, :maxlength => 5 %><br>
	<%= f.label :cover_photo %>
	<%= f.file_field :avatar, as: :file %>
	<%= f.label :sponsor_this_event? %>
	<%= f.check_box :sponsored %>

	<br>
	<%= f.button %>
	<% end %>