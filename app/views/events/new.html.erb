<h3>Create New Event</h3>

<%= form_for [@a_user, @newevent] do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :date_date %>
	<%= f.date_field :date_date, min: @today %>
	<%= f.label :date_time %>
	<%= f.time_field :date_time %>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<%= f.label :street %>
	<%= f.text_field :street %>
	<%= f.label :city %>
	<%= f.text_field :city %>
	<%= f.label :state %>
	<%= f.text_field :state, :maxlength => 2 %>
	<%= f.label :Zip %>
	<%= f.text_field :zipcode, :maxlength => 5 %>
	<br>
	<%= f.button %>
	<% end %>